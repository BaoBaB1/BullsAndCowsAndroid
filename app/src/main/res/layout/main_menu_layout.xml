<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/background"
    tools:context=".MainMenuActivity">

    <ImageView
        android:id="@+id/bullIcon"
        android:layout_width="@dimen/_150dp"
        android:layout_height="@dimen/_150dp"
        android:layout_alignParentStart="true"
        android:background="@android:color/transparent"
        android:src="@drawable/bull_icon"
        />

    <TextView
        android:id="@+id/ampSymbol"
        android:layout_width="@dimen/_115dp"
        android:layout_height="@dimen/_150dp"
        android:layout_toEndOf="@id/bullIcon"
        android:gravity="center"
        android:text="@string/amp"
        android:textSize="@dimen/_70sp"
        android:textStyle="bold|italic"
        >
    </TextView>

    <ImageView
        android:id="@+id/cowIcon"
        android:layout_width="@dimen/_150dp"
        android:layout_height="@dimen/_150dp"
        android:background="@android:color/transparent"
        android:src="@drawable/cow_icon"
        android:layout_toEndOf="@id/ampSymbol"
        />

    <TextView
        android:id="@+id/gameName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ampSymbol"
        android:layout_marginTop="@dimen/_20sp"
        android:layout_centerHorizontal="true"
        android:text="@string/game_name"
        android:gravity="center"
        android:textSize="@dimen/_40sp"
        android:textColor="#fffbbb"
        android:shadowColor="#000000"
        android:shadowDx="7.5"
        android:shadowDy="1.3"
        android:shadowRadius="1.6"
        android:textStyle="bold|italic"
        >
    </TextView>

    <Button
        android:id="@+id/startGameButton"
        android:layout_width="@dimen/_300dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/gameName"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_50dp"
        android:text="@string/start_game"
        android:textSize="@dimen/_20sp"
        >
    </Button>

    <Button
        android:id="@+id/aboutGameButton"
        android:layout_width="@dimen/_300dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/startGameButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_20sp"
        android:text="@string/about_game"
        android:textSize="@dimen/_20sp"
        >
    </Button>

    <Button
        android:id="@+id/devInfoButton"
        android:layout_width="@dimen/_300dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/aboutGameButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_20sp"
        android:text="@string/about_developer"
        android:textSize="@dimen/_20sp"
        >
    </Button>

    <Button
        android:id="@+id/exitButton"
        android:layout_width="@dimen/_300dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/devInfoButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_20sp"
        android:text="@string/exit"
        android:textSize="@dimen/_20sp"
        >
    </Button>

</RelativeLayout>